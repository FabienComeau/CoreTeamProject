@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<div class="row headline">
    <!-- Begin Headline -->
    <!-- Slider Carousel
    ================================================== -->
    <div class="span8">
        <div class="flexslider">
            <ul class="slides">
                <li><img src="~/img/gallery/startLandingPic.jpg" alt="slider" /></li>
                <li> <img src="~/img/gallery/TheCapitol-4withtext.jpg" alt="slider" /></li>
                <li><img src="~/img/gallery/testing1.jpg" alt="slider" /></li>
                <li> <img src="~/img/gallery/musicwithtext.jpg" alt="slider" /></li>
            </ul>
        </div>
    </div>

    <!-- Headline Text
    ================================================== -->
    <div class="span3 offset1">
        @{
            @await Html.PartialAsync("_LoginPartial");
            
        }

    </div>
</div><!-- End Headline -->
<br />
<div class="row gallery-row">
    <!-- Begin Gallery Row -->

    <div class="span12">
        <h5 class="title-bg">
            Upconing Events!
            @*<small>That we are most proud of</small>*@
        </h5>

        <!-- Gallery Thumbnails
        ================================================== -->
        <div class="row clearfix no-margin">
            <ul class="gallery-post-grid holder">
                @await Component.InvokeAsync("NewsWidget")
            </ul>
        </div>
        
    </div>

</div><!-- End Gallery Row -->